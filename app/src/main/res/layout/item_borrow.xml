<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        tools:text="item name"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/borrower_name"/>

    <TextView
        android:id="@+id/borrower_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        tools:text="borrower name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_name"
        app:layout_constraintRight_toLeftOf="@id/borrow_date"/>

    <TextView
        android:id="@+id/borrow_date"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        tools:text="1/1/2018"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/borrower_name"
        app:layout_constraintRight_toLeftOf="@id/borrower_location"/>

    <TextView
        android:id="@+id/borrower_location"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        tools:text="123 street"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/borrow_date"
        app:layout_constraintRight_toLeftOf="@id/delete_button"/>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:text="delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/borrower_location"/>

</android.support.constraint.ConstraintLayout>